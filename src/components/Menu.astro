---
const menuDesktop =
  'md:vertical md:justify-between md:rounded-full p-1 items-center md:border md:border-zinc-800 overflow-hidden';

const menu =
  ' font-text max-md:border border-astronaut max-md:border-l-0 max-md:w-full max-md:h-full justify-center';
const item = 'md:text-xl sm:text-lg text-base my-2';
---

<nav class="md:w-auto max-sm:w-full md:h-auto sm:h-1/5 sm:w-full md:mr-5">
  <ul
    class="flex md:gap-1 md:mx-2 md:flex-col max-md:h-full w-full items-center justify-around"
  >
    <li class={`${menuDesktop} ${menu} flex`}>
      <a href="#" class={`${item}`}>Sobre mi</a>
    </li>
    <li class={`${menuDesktop} ${menu} flex`}>
      <a href="#" class="flex items-center">
        <p class={`${item}`}>Proyectos</p>
        <img
          src="assets/arrow.svg"
          alt="link arrow"
          width="32"
          class="md:rotate-90 md:mb-2 md:block w-8 max-md:ml-2 hidden"
        />
      </a>
    </li>
    <li class={`${menuDesktop} ${menu} flex`}>
      <a class={`${item}`}>Formulario</a>
    </li>
  </ul>
</nav>
